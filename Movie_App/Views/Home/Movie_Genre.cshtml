@model IEnumerable<Movie_App.Resources.MovieResources>
@{
    ViewBag.Title = "Movie_Genre";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section id="trend" class="pt-4 pb-5" style="background-color:#010102">
    <div class="container">
        <div class="row trend_1">
            <div class="col-md-6 col-6">
                <div class="trend_1l">
                    <h4 class="mb-0 text-white"><i class="fa fa-youtube-play align-middle col_red me-1"></i> @ViewBag.name</h4>
                </div>
            </div>

        </div>
        <div class="row trend_2 mt-4">
            <div id="carouselExampleCaptions1" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="1" aria-label="Slide 2" class="" aria-current="true"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="trend_2i row">
                            @foreach (var item in Model)
                            {
                                var description = @item.Description.Length > 153
                 ? @item.Description.Substring(0, 153) + "..."
                 : @item.Description;
                <div class="col-md-3 col-6">
                    <div class="trend_2im clearfix position-relative">
                        <div class="trend_2im1 clearfix">
                            <div class="grid">
                                <figure class="effect-jazz mb-0">
                                    <a href="@Url.Action("MovieDetails", "Home", new { slug=item.Slug })"><img src="@item.ImagePath" class="w-100" alt="img25" style="width:270px;height:200px"></a>
                                </figure>
                            </div>
                        </div>

                    </div>
                    <div class="trend_2ilast bg_grey p-3 clearfix h-100">
                        <h5><a class="col_red text-decoration-none" href="@Url.Action("MovieDetails", "Home", new { slug=item.Slug })">@item.Name</a></h5>
                        <p class="mb-2">@description</p>
                        

                        <p class="mb-0">

                            ₦@item.TicketPrice
                        </p>
                    </div>
                </div>
            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



